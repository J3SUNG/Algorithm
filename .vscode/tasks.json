{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "C:/MinGW/bin/g++",
      "args": [
        "-g",
        "-std=c++14",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "C:/MinGW/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
